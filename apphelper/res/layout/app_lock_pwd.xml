<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:paddingLeft="10dip"
        android:background="#ff5241b5"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_app_lock_pwd_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_app_lock_pwd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="程序名"
            android:textColor="@android:color/white"
            android:textSize="20dip" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:gravity="center"
        android:text="@string/title_input_pass"
        android:textSize="22dip" />

    <EditText
        android:id="@+id/et_app_lock_pwd"
        android:layout_width="280dip"
        android:layout_height="50dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/et_border_selector"
        android:hint="请输入程序锁密码"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:singleLine="true" >
    </EditText>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:orientation="vertical"
         >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#ffd4d0c8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="15dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="140dip"
                android:layout_height="35dip"
                android:background="@drawable/tv_border_selector"
                android:gravity="center"
                android:text="取   消"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="140dip"
                android:layout_height="35dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/tv_border_selector"
                android:gravity="center"
                android:text="确   认"
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>