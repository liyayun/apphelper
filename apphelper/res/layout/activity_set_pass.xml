<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.lee.appmanager.ui.SetPassActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:text="@string/changePass"
        android:textSize="20dip" />

    <EditText
        android:id="@+id/et_old_pass"
        android:layout_width="260dip"
        android:layout_height="50dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/et_border_selector"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_new_pass"
        android:layout_width="260dip"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/et_border_selector"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_confirm_pass"
        android:layout_width="260dip"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/et_border_selector"
        android:hint="请确认新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:singleLine="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#ffd4d0c8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="15dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_set_cancel"
                    android:layout_width="140dip"
                    android:layout_height="35dip"
                    android:background="@drawable/tv_border_selector"
                    android:gravity="center"
                    android:text="取   消"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/tv_set_confirm"
                    android:layout_width="140dip"
                    android:layout_height="35dip"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/tv_border_selector"
                    android:gravity="center"
                    android:text="确   认"
                    android:textSize="18dip" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>